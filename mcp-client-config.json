{
  "mcpServers": {
    "convex": {
      "command": "node",
      "args": ["./mcp-servers/convex-mcp-server.js"],
      "env": {
        "CONVEX_URL": "${CONVEX_URL}",
        "CONVEX_AUTH_KEY": "${CONVEX_AUTH_KEY}"
      }
    },
    "magicui": {
      "command": "node",
      "args": ["./mcp-servers/magicui-mcp-server.js"],
      "env": {
        "MAGICUI_API_KEY": "${MAGICUI_API_KEY}"
      }
    },
    "reactbits": {
      "command": "node",
      "args": ["./mcp-servers/reactbits-mcp-server.js"],
      "env": {
        "REACTBITS_API_KEY": "${REACTBITS_API_KEY}"
      }
    },
    "slack": {
      "command": "node",
      "args": ["./mcp-servers/slack-mcp-server.js"],
      "env": {
        "SLACK_BOT_TOKEN": "${SLACK_BOT_TOKEN}",
        "SLACK_APP_TOKEN": "${SLACK_APP_TOKEN}",
        "SLACK_SIGNING_SECRET": "${SLACK_SIGNING_SECRET}"
      }
    }
  },
  "agentConfig": {
    "name": "Enhanced Spec Kit Agent",
    "model": "google/gemini-2.5-flash-lite",
    "maxTokens": 8192,
    "temperature": 0.7,
    "parallelToolCalls": true,
    "mcpIntegration": {
      "enabled": true,
      "timeout": 30000,
      "retryAttempts": 3,
      "healthCheckInterval": 60000
    }
  },
  "communicationFlow": {
    "userInput": {
      "source": "slack",
      "channel": "#anyacursor-dev",
      "botName": "SpecKitBot"
    },
    "taskCoordination": {
      "assistant": "AI Assistant",
      "protocol": "mcp_coordination",
      "timeout": 300000
    },
    "progressUpdates": {
      "frequency": "real_time",
      "channels": ["#anyacursor-dev", "#anyacursor-progress"],
      "format": "markdown"
    },
    "completionReports": {
      "includeFiles": true,
      "includeMetrics": true,
      "includeNextSteps": true
    }
  }
}
